<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/msgTextMe"
        android:background="@drawable/msg_box_me"
        android:text="hey there hey there hey there hey there hey there "
        android:padding="20dp"
        android:layout_margin="5dp"
        android:textSize="12dp"
        android:textColor="@android:color/black" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgTextMe"
        android:layout_alignLeft="@+id/msgTextMe"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="19 January 2015"
        android:id="@+id/dateMe"
        android:textSize="10dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dltMsgMe"
        android:src="@drawable/delete_msg"
        android:layout_below="@+id/msgTextMe"
        android:layout_alignRight="@+id/msgTextMe"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/msgTextMe"
        android:layout_alignRight="@+id/msgTextMe"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="19 January 2015"
        android:id="@+id/dateYou"
        android:textSize="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dltMsgYou"
        android:src="@drawable/delete_msg"
        android:layout_below="@+id/msgTextMe"
        android:layout_alignLeft="@+id/msgTextMe"/>

</RelativeLayout>
